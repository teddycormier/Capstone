@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Calendar";
}

@model List<Capstone.Models.CalendarEventViewModel>

<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="block" style="width: 40vh; height: 45vh; margin-top: 20%; margin-left: 70vh">
        <div style="z-index: 10000001;" class="floating-div">
            <div>
                <div>Google Calendar Events</div>
                <div class="user-circle-profile-div"> @* change to calendar *@
                    <i class="fas fa-user"></i>
                </div>
            </div>
            <div>
                <ul>
                    @if (Model != null)
                    {
                        @foreach (var evt in Model)
                        {
                            <li>
                                @if (!string.IsNullOrEmpty(evt.Summary))
                                {
                                    <strong>@evt.Summary</strong>

                                    <br />
                                }
                                <strong>Start:</strong> @(evt.Start?.ToString("MM/dd/yyyy HH:mm") ?? "N/A")<br />
                                <strong>End:</strong> @(evt.End?.ToString("MM/dd/yyyy HH:mm") ?? "N/A")
                            </li>
                        }
                    }
                    else
                    {
                        <p>No events available.</p>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>

</html>
